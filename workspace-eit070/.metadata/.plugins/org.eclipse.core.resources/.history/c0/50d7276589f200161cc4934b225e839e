#include "displays.h"
/*
 * COMMENT:
 * insert the completed definition of the array “display_codes” (Assignment 2)
 */
void displayDigitAtIndex(unsigned char index, unsigned char digit) {
	if ((index < 8) && (digit < 10))
		*((unsigned int *) (SEVEN_SEGMENT_DISPLAY_BASE + index * 4)) =
				display_codes[digit];
}
